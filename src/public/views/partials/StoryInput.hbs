<div id='story-submit-div'>
    {{#if titleNeeded}}
        <div class="form-group">
            <label for="title">New Story Title</label>
            <input type="text" class="form-control" id="title" name="title" aria-describedby="title-desc">
            <small id="title-desc" class="form-text text-muted">Enter title for new story.</small>
        </div>
    {{/if}}
    <div class="form-group">
        <label for="story">Story</label>
        <input type="text" class="form-control" id="story" name="story" aria-describedby="word-count" onkeyup="updateWordCount()">
        <small id="word-count" class="form-text text-muted">Number of characters: 0/500</small>
    </div>
    <div class="form-group">
        <label for="numWords"># Words to Show Next Player</label>
        <select class="form-control" id="numWords" name="numWords">
            <option>1</option>
            <option>2</option>
            <option selected>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
        </select>
    </div>
    <input type="hidden" id="storyID" name="storyID" value="{{storyID}}">
    <button id="story-submit" type="submit" class="btn btn-primary" onclick="addStory()">Submit</button>
    {{#if finishButton}}
        <button id="story-finish" type="submit" class="btn btn-success" onclick="finishStory()">Finish Story</button>
    {{/if}}
</div>

<script>
    document.getElementById('story-submit-div').addEventListener('keyup', (event) => {
        event.preventDefault();
        if (event.keyCode === 13) document.getElementById('story-submit').click();
    });
</script>